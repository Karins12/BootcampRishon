<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .workout-card {
            background-color: #f0f0f0; /* Light grey background */
            padding: 10px;
            margin: 5px;
            border-radius: 5px;
            cursor: pointer; /* Change cursor to pointer */
            text-align: center;
            transition: background-color 0.3s;
            flex: 0 0 100px; /* Set a fixed width */
        }

        .map {
            color: #f0750f;
        }

        .workout-card:hover {
            background-color: #e0e0e0; /* Darker grey on hover */
        }

        #bike-container {
            display: flex; /* Flexbox for row layout */
            flex-wrap: wrap; /* Allow wrapping */
            justify-content: center; /* Center the cards */
        }

        #description-container {
            display: none; /* Hide by default */
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <div class="d-flex justify-content-between">
            <h2 class="col-6">Name</h2>
            <h2 class="col-6">Logo</h2>
        </div>
        <strong><h2>כל האימונים</h2></strong>
    </div>
    
    <form class="example text-center mt-3 mb-3" action="action_page.php">
        <i class="fa fa-filter" style="font-size:24px"></i>
        <input type="text" placeholder="Search.." name="search">
    </form>
    
    <div id="description-container">
        <h3 class="text-end" id="workout-name"></h3>
        <p class="text-end" id="workout-description"></p>
        <button class="btn btn-secondary text-end" onclick="hideDescription()">חזרה</button>
        <i class="fa fa-map-marker map" style="font-size:36px"></i>
    </div>

    <div class="text-end">
        <h2>אימונים עם אופניים</h2>
    </div>
    <div class="mt-1 mb-3 text-end row rounded-start justify-content-end gap-2" id="bike-container">
        <!-- Fetched bike training data will go here -->
    </div>

    <div class="text-end">
        <h2>אימוני כוח</h2>
    </div>
    <div class="mt-1 mb-3 text-end row rounded-start justify-content-end gap-2" id="strength-container">
        <!-- Fetched strength training data will go here -->
    </div>

    <div class="text-end">
        <h2>עוד הצעות בשבילך</h2>
    </div>
    <div class="mt-1 mb-3 text-end row rounded-start justify-content-end gap-2" id="strength-container">
        <!-- Fetched strength training data will go here -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Function to initialize the page and fetch data
        const init = () => {
            fetchData();
        }
    
        // Function to fetch data from the API
        const fetchData = () => {
            fetch('/api/v1/routes')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log(data);
                    populateData(data);
                })
                .catch(error => {
                    console.error('There has been a problem with your fetch operation:', error);
                });
        }
    
        // Function to populate data into the HTML
        const populateData = (data) => {
            const bikeContainer = document.getElementById('bike-container');
            const strengthContainer = document.getElementById('strength-container');
            bikeContainer.innerHTML = '';
            strengthContainer.innerHTML = '';
    
            data.forEach(item => {
                if (item.name.includes('אופניים')) {
                    const div = document.createElement('div');
                    div.textContent = item.name;
                    div.classList.add('workout-card');
                    div.onclick = () => showDescription(item.name, item.description); // Pass name and description
                    bikeContainer.appendChild(div);
                }
                else if (item.name.includes('אימון כח') || item.name.includes('אימון כוח')) {
                    const div = document.createElement('div');
                    div.textContent = item.name;
                    div.classList.add('workout-card');
                    div.onclick = () => showDescription(item.name, item.description); // Pass name and description
                    strengthContainer.appendChild(div);
                }
                else {
                    const div = document.createElement('div');
                    div.textContent = item.name;
                    div.classList.add('workout-card');
                    div.onclick = () => showDescription(item.name, item.description); // Pass name and description
                    strengthContainer.appendChild(div);
                }
            });
        }
    
        // Function to show the workout description
        const showDescription = (name, description) => {
            document.getElementById('workout-name').textContent = name;
            document.getElementById('workout-description').textContent = description;
            document.getElementById('description-container').style.display = 'block'; // Show the description container
        }

        // Function to hide the description
        const hideDescription = () => {
            document.getElementById('description-container').style.display = 'none'; // Hide the description container
        }
    
        init();
    </script>
    
</body>
</html>
